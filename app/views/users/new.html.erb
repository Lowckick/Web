        <hr />
      </div>
      <div style="float:right; width: 34%;">
        <hr />
      </div>
      <p class=" log-with">Or Login with</p>
    </div> %>
    <% if @user.errors.any? %>
      <% @user.errors.full_messages.each do |message| %>
        <p class="text-red message-error"><%= message %></p>
      <% end %>
    <% end %>
  </div>
</div>
