
<div class="wrapper">
  <div>
    <h3 class="title">Reg</h3>
    <%= form_with model: @user, data: {turbo: false} do |form| %>
      <p> <%= form.label :email %></p>
      <p><%= form.text_field :email%></p>
      <p> <%= form.label :password %></p>
      <p><%= form.password_field :password %></p>
      <p> <%= form.label :password_confirmation %></p>
      <p><%= form.password_field :password_confirmation %></p>
      <p><%= form.submit "Login" %></p>
    <% end %>
    <%# <p class="dha-account">Don't have an account? <a href="#">Create new</a></p>
    <div class="flex-grow bg bg-gray-300 h-0.5"></div>
    <div class="wapper">
