<h2 class="text-center">Markets Overview</h2>
<div class="container-md">
  <div class="flex-direction-row">
    <% for item in @data %>
      <div class="flex-item">
        <p class="markets-item">
          <img src="<%= item["image"]%>" class="icon">
          <%= "#{item["name"]}"%>
        </p>
        <p class="markets-item"> <%= item["current_price"] %> $</p>
        <p class="markets-item"><%= "#{item["price_change_24h"].round(5)}" %>$</p>
        <p class="markets-item mark-last-item"><%= "#{item["price_change_percentage_24h"].round(4)}%" %></p>
      </div>
      <hr>
    <% end %>
  </div>
</div>
